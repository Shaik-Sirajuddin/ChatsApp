<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    >

    <ImageView
        android:background="@drawable/receiver_msg_back"
        android:visibility="gone"
        android:padding="5dp"
        android:id="@+id/Image"
        android:scaleType="centerCrop"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:background="@drawable/receiver_msg_back"
        android:id="@+id/receive_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="60dp"
        android:textSize="18sp"
        android:paddingBottom="5dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Image" />
<TextView
    android:id="@+id/msg_time"
    android:layout_width="58dp"
    android:layout_height="23dp"
    android:padding="4dp"
    android:layout_marginEnd="2dp"
    app:layout_constraintEnd_toEndOf="@id/receive_msg"
    app:layout_constraintBottom_toBottomOf="@id/receive_msg"
    android:text="12:59 am"
    android:textStyle="italic"
    android:textAlignment="center"
    android:textSize="12sp"
    />
    <ImageView
        android:visibility="gone"
        android:id="@+id/emoji"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/receive_msg"
        app:layout_constraintStart_toEndOf="@id/receive_msg"
        app:layout_constraintTop_toTopOf="@+id/receive_msg" />
</androidx.constraintlayout.widget.ConstraintLayout>